<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="300.0" spacing="5.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gabriel.ecomms.ManageEcommerceController">
	<padding>
		<Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
	</padding>
	<HBox prefHeight="100.0" prefWidth="200.0">
		<children>
			<ListView fx:id="lvEcommerces" onMouseClicked="#onAction">
				<HBox.margin>
					<Insets bottom="10.0" />
				</HBox.margin>
			</ListView>
			<VBox prefHeight="200.0" prefWidth="100.0">
				<children>
					<Button fx:id="btnDelete" mnemonicParsing="false" onAction="#onDelete" text="Delete" >
						<VBox.margin>
							<Insets bottom="10.0" />
						</VBox.margin>
					</Button>
					<Button fx:id="btnEdit" mnemonicParsing="false" onAction="#onEdit" text="Edit" >
						<VBox.margin>
							<Insets bottom="10.0" />
						</VBox.margin>
					</Button>
					<Button fx:id="btnCreate" mnemonicParsing="false" onAction="#onCreate" text="Create" >
						<VBox.margin>
							<Insets bottom="10.0" />
						</VBox.margin>
					</Button>
					<Button fx:id="btnClose" mnemonicParsing="false" onAction="#onClose" text="Close" >
						<VBox.margin>
							<Insets bottom="10.0" />
						</VBox.margin>
					</Button>
				</children>
				<HBox.margin>
					<Insets left="10.0" />
				</HBox.margin>
			</VBox>
		</children>
	</HBox>
	<ImageView fx:id="ecommerceImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
	<HBox prefHeight="30.0" prefWidth="200.0">
	<Label alignment="CENTER" prefWidth="80.0" text="Id">
	<padding>
	<Insets left="10.0" />
	</padding>
	</Label>
	<TextField fx:id="txtId" editable="false" prefWidth="200.0" >
	<HBox.margin>
	<Insets />
	</HBox.margin>
	</TextField>
	<padding>
	<Insets top="10.0" />
	</padding>
	</HBox>
	<HBox prefHeight="30.0" prefWidth="200.0">
		<Label alignment="CENTER" prefWidth="80.0" text="Name">
			<padding>
				<Insets left="10.0" />
			</padding>
		</Label>
		<TextField fx:id="txtName" editable="false" prefWidth="200.0" />
		<padding>
			<Insets top="10.0" />
		</padding>
	</HBox>
	<HBox prefHeight="30.0" prefWidth="200.0">
		<Label alignment="CENTER" prefWidth="80.0" text="Description">
			<padding>
				<Insets left="10.0" />
			</padding>
		</Label>
		<TextField fx:id="txtDescription" editable="false" prefWidth="200.0" />
		<padding>
			<Insets top="10.0" />
		</padding>
	</HBox>
	<HBox prefHeight="30.0" prefWidth="200.0">
		<Label alignment="CENTER" prefWidth="80.0" text="Product">
			<padding>
				<Insets left="10.0" />
			</padding>
		</Label>
		<StackPane prefHeight="150.0" prefWidth="200.0">
			<children>
				<ComboBox fx:id="cmbProduct" prefWidth="200.0" />
				<TextField fx:id="txtProductName" editable="false" prefWidth="150.0"/>
			</children>
		</StackPane>
		<padding>
			<Insets top="10.0" />
		</padding>
	</HBox>
	<HBox prefHeight="30.0" prefWidth="200.0">
		<Label alignment="CENTER" prefWidth="80.0" text="Category">
			<padding>
				<Insets left="10.0" />
			</padding>
		</Label>
		<StackPane prefHeight="150.0" prefWidth="200.0">
			<children>
				<ComboBox fx:id="cmbCategory" prefWidth="200.0" />
				<TextField fx:id="txtCategoryName" editable="false" prefWidth="150.0"/>
			</children>
		</StackPane>
		<padding>
			<Insets top="10.0" />
		</padding>
	</HBox>
	<HBox prefHeight="30.0" prefWidth="200.0">
		<Label alignment="CENTER" prefWidth="80.0" text="Status">
			<padding>
				<Insets left="10.0" />
			</padding>
		</Label>
		<StackPane prefHeight="150.0" prefWidth="200.0">
			<children>
				<ComboBox fx:id="cmbStatus" prefWidth="200.0" />
				<TextField fx:id="txtStatusName" editable="false" prefWidth="150.0"/>
			</children>
		</StackPane>
		<padding>
			<Insets top="10.0" />
		</padding>
	</HBox>
	<HBox prefHeight="30.0" prefWidth="200.0">
		<Label alignment="CENTER" prefWidth="80.0" text="QuantityAvailable">
			<padding>
				<Insets left="10.0" />
			</padding>
		</Label>
		<TextField fx:id="txtQuantityAvailable" editable="false" prefWidth="200.0" />
		<padding>
			<Insets top="10.0" />
		</padding>
	</HBox>
	<HBox prefHeight="30.0" prefWidth="200.0">
		<Label alignment="CENTER" prefWidth="80.0" text="Inventory">
			<padding>
				<Insets left="10.0" />
			</padding>
		</Label>
		<StackPane prefHeight="150.0" prefWidth="200.0">
			<children>
				<ComboBox fx:id="cmbInventory" prefWidth="200.0" />
				<TextField fx:id="txtInventoryName" editable="false" prefWidth="150.0"/>
			</children>
		</StackPane>
		<padding>
			<Insets top="10.0" />
		</padding>
	</HBox>
	<HBox prefHeight="30.0" prefWidth="200.0">
		<Label alignment="CENTER" prefWidth="80.0" text="Price">
			<padding>
				<Insets left="10.0" />
			</padding>
		</Label>
		<TextField fx:id="txtPrice" editable="false" prefWidth="200.0" />
		<padding>
			<Insets top="10.0" />
		</padding>
	</HBox>
</VBox>
